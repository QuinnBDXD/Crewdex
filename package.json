{
  "name": "crewdex",
  "private": true,
  "workspaces": ["backend", "frontend"],
  "scripts": {
    "dev": "cross-env JWT_SECRET=dev-secret pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "cross-env JWT_SECRET=dev-secret pnpm --filter backend start",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
